<section class="posts grid">
  {% for post in postslist | reverse %}
    <article class="post{% if post.url == url %} post-active{% endif %}">
      {% if post.image %}
        <div class="post__image">
          <img src="{{ post.image }}" alt="{{ post.title }}">
        </div>
      {% endif %}
      <h2 class="post__title"><a href="{{ post.url }}">{{ post.title }}</a></h2>
      <div class="post__tags">
        {% for tag in post.data.tags | filterTagList %}
          {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
          <a href="{{ tagUrl | url }}" class="post__tag">{{ tag }}</a>
        {% endfor %}
      </div>
      <div class="post__meta">
        <time class="post__date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
        <span class="post__author">{{ post.author }}</span>
      </div>
      <div class="post__description">
        {{ post.description }}
      </div>
      <a href="{{ post.url | url }}" class="post__link">
        {% if post.data.title %}{{ post.data.title }}{% else %}
        <code>{{ post.url }}</code>{% endif %}
      </a>
    </article>
  {% endfor %}
</section>

