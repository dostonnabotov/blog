<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <meta name="keywords" content="{{ keywords or metadata.keywords }}">
    <meta name="author" content="{{ author or metadata.author.name }}">

    <link rel="icon" href="{{ favicon or metadata.favicon }}">

    <meta name="generator" content="{{ eleventy.generator }}">

    {# font awesome cdn #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-diff.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  

    <script src="/index.js" defer></script>
  </head>
  <body>
    <header data-role="primary">
      <div class="header container">
        <div>
          <a href="{{ '/' | url }}">
            <img src="/img/logo.svg" alt="coding" class="logo">
          </a>
        </div>

        <ul class="nav">
          {%- for entry in collections.all | eleventyNavigation %}
            <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
              <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            </li>
          {%- endfor %}
        </ul>
      </div>
    </header>

    <main class="container" {% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Back to top -->
    <button type="button" id="backToTop" class="back-to-top" title="Go to top">
      <i class="fas fa-arrow-up"></i>
    </button>
    <!-- /Back to top -->

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
